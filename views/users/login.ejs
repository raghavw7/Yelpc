<% layout('layouts/boilerplate') %>

<div class="container d-flex align-items-center justify-content-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img class="card-img-top" src="https://images.unsplash.com/photo-1676504516355-acf93a96b387?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" />
                <div class="card-body">
                    <h5 class="card-title"> Login </h5>
                    <form action = "/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username"> Username </label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks Good
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password"> Password </label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks Good
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success ">Log In</button>
                        </div>
                        
                    </form>  
                </div>
            </div>
        </div>
    </div>
</div>


